{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "output",
    "sourceMap": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types", "./@types"]
  },
  "exclude": [
    "node_modules",
    "output",
    "typings",
    "jshint",
    "script",
    "app"
  ]
}
